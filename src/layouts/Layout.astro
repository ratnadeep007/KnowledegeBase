---
import Footer from '../components/Footer.astro';
import { PageTransition } from 'astro-page-transition';

export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/png" href="/adaptive-icon.png" />
		<!-- HTML Meta tags -->
		<meta name="description" content="Track interesting technologies and tools that can help you in your personal or professional projects. New content is added in regular basis so that you can be udpated with new technologies all the time." />
		<meta name="generator" content={Astro.generator} />
		<!-- Facebook meta tags -->
		<meta name="og:description" content="Track interesting technologies and tools that can help you in your personal or professional projects. New content is added in regular basis so that you can be udpated with new technologies all the time." />
		<meta name="og:title" content="Knowledge Base" />
		<meta name="og:url" content="https://knowledegebase.vercel.app/" />
		<meta name="og:tyoe" content="website" />
		<meta name="og:image" content="/knowledgebase.png" />
		<!-- Twitter meta tags -->
		<meta name="twitter:card" content="summary_large_image">
		<meta property="twitter:domain" content="knowledegebase.vercel.app">
		<meta property="twitter:url" content="https://knowledegebase.vercel.app/">
		<meta name="twitter:title" content="Knowledge Base">
		<meta name="twitter:description" content="Track interesting technologies and tools that can help you in your personal or professional projects. New content is added in regular basis so that you can be udpated with new technologies all the time.">
		<meta name="twitter:image" content="/knowledgebase.png">
		<title>{title}</title>
	</head>
	<body class="bg-gradient-to-br from-[#D1913C] to-[#FFD194] bg-no-repeat min-h-screen h-full">
		<main class="container mx-auto">
			<slot />
		</main>
		<!-- <Footer /> -->
		<PageTransition background="linear-gradient(to bottom right, #D1913C, #FFD194);" />
	</body>
</html>